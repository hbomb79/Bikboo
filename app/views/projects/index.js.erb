(function( content ){
    $("section#projects .content .loading").hide();
    res = $("section#projects .content .projects").html( content );

    res.stop( true ).fadeIn( 500 ).find( ".project" ).css("margin-top", "5rem").each( function( i ) {
        var $item = $( this );
        setTimeout( function(){
                $item.animate({
                    marginTop: "1rem"
                }, 250 );
        }, Math.min( 50 * i, 2000 ) );
    });
});
