$project_list = $("section#projects .project-list")
$project_list.find(".loading").fadeOut( 250 ).promise().done( function(){
    res = $project_list.find(".content").html("<%= escape_javascript( render current_user.projects.order! 'updated_at DESC' ) %>")<%= params[:hook] ? "" : ".fadeIn( 250 )" %>;

    <% if params[:hook] %>
    window.<%= params[:hook] %>( res );
    <% end %>
});
