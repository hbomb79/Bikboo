<div id="profile-modal">
    <div class="wrapper">
        <div id="top" class="clearfix">
            <div id="image">
                <img src="<%= current_user.image_url %>?size=100" alt="Profile avatar">
            </div>
            <div id="profile">
                <div class="wrapper">
                    <h1><%= current_user.name %></h1>
                    <a href="/dashboard" class="button">Dashboard</a>
                </div>
            </div>
        </div>
        <a href="/signout" class="button" id="signout">Sign out</a>
    </div>
</div>
